#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <arpa/inet.h>
#include <sys/socket.h>

#define PORT 58025
#define BUF_SIZE 1024

void usage(const char *prog) {
    printf("Usage: %s [TCP|UDP] \"MESSAGE\" COUNT\n", prog);
    exit(EXIT_FAILURE);
}

int main(int argc, char *argv[]) {
    if (argc != 4) {
        usage(argv[0]);
    }

    char *protocol = argv[1];
    char *message = argv[2];
    int count = atoi(argv[3]);
    if (count <= 0) {
        fprintf(stderr, "Invalid count\n");
        return EXIT_FAILURE;
    }

    struct sockaddr_in server_addr;
    memset(&server_addr, 0, sizeof(server_addr));
    server_addr.sin_family = AF_INET;
    server_addr.sin_port = htons(PORT);
    // Assuming the server is on the local machine
    if (inet_pton(AF_INET, "127.0.0.1", &server_addr.sin_addr) <= 0) {
        perror("Invalid address/ Address not supported");
        return EXIT_FAILURE;
    }

    // --- Core Logic ---
    printf("Starting client loop: %d requests via %s to 127.0.0.1:%d\n", count, protocol, PORT);

    for (int i = 0; i < count; i++) {
        int sock;
        char buffer[BUF_SIZE] = {0};
        ssize_t bytes_received;

        printf("\n--- Request %d/%d ---\n", i + 1, count);

        if (strcasecmp(protocol, "TCP") == 0) {
            // TCP Request
            sock = socket(AF_INET, SOCK_STREAM, 0);
            if (sock < 0) {
                perror("TCP socket");
                return EXIT_FAILURE;
            }

            // Connect
            if (connect(sock, (struct sockaddr *)&server_addr, sizeof(server_addr)) < 0) {
                perror("TCP connect");
                close(sock);
                // Continue to next request instead of failing the whole program
                // For demonstration, let's just print and continue.
                continue; 
            }

            // Send message
            if (send(sock, message, strlen(message), 0) < 0) {
                perror("TCP send");
                close(sock);
                continue;
            }
            printf("TCP: Sent \"%s\". Awaiting response...\n", message);

            // Receive response
            bytes_received = recv(sock, buffer, BUF_SIZE - 1, 0);
            if (bytes_received < 0) {
                perror("TCP recv");
            } else if (bytes_received == 0) {
                printf("TCP: Connection closed by server.\n");
            } else {
                buffer[bytes_received] = '\0'; // Null-terminate the string
                printf("TCP: Received answer: **%s**\n", buffer);
            }

            close(sock);

        } 
        else if (strcasecmp(protocol, "UDP") == 0) {
            // UDP Request
            sock = socket(AF_INET, SOCK_DGRAM, 0);
            if (sock < 0) {
                perror("UDP socket");
                return EXIT_FAILURE;
            }
            
            // Send message
            if (sendto(sock, message, strlen(message), 0,
                       (struct sockaddr *)&server_addr, sizeof(server_addr)) < 0) {
                perror("UDP sendto");
                close(sock);
                continue;
            }
            printf("UDP: Sent \"%s\". Awaiting response...\n", message);
            
            // Receive response
            // For UDP, we use recvfrom to get the data (and potentially the sender's address)
            // Note: UDP is unreliable. This `recvfrom` might block indefinitely if the server
            // doesn't reply or the packet is lost. A timeout mechanism (like `select`) is 
            // generally recommended for robust UDP clients, but we omit it for simplicity here.
            
            struct sockaddr_in from_addr;
            socklen_t from_len = sizeof(from_addr);

            bytes_received = recvfrom(sock, buffer, BUF_SIZE - 1, 0,
                                      (struct sockaddr *)&from_addr, &from_len);

            if (bytes_received < 0) {
                perror("UDP recvfrom");
            } else {
                buffer[bytes_received] = '\0'; // Null-terminate the string
                printf("UDP: Received answer: **%s**\n", buffer);
            }

            close(sock);

        } 
        else {
            fprintf(stderr, "Unknown protocol: %s\n", protocol);
            usage(argv[0]);
        }
    }

    printf("\nFinished %d requests via %s.\n", count, protocol);
    return 0;
}